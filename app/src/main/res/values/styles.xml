<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextItemStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/wight</item>
        <item name="android:background">@drawable/button_shape_animation</item>
    </style>
 <style name="InputStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/input_shape_animation</item>
    </style>

    <style name="InputStyleDetails">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">@dimen/item_input_detail</item>
        <item name="android:background">@drawable/item_shoe_list_border</item>
    </style>

    <dimen name="item_input_detail">40dp</dimen>
</resources>
